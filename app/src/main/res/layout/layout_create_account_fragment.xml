<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_create_account_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bloomBackground"
    android:orientation="vertical">

    <android.support.v4.view.ViewPager
        android:id="@+id/create_account_viewPager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <ImageView
        android:id="@+id/create_account_bloomwalls_icon"
        android:layout_width="220dp"
        android:layout_height="53.5dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="73.44dp"
        android:src="@drawable/bloomwalls" />

    <TextView
        android:id="@+id/create_account_txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/create_account_bloomwalls_icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14.8dp"
        android:text="@string/selected_type"
        android:gravity="center_horizontal"
        android:textColor="@color/bloomWhite" />

    <TextView
        android:id="@+id/create_account_txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:text="@string/selected_type"
        android:layout_marginBottom="167dp"
        android:textColor="@color/bloomWhite" />


    <android.support.design.widget.TabLayout
        android:id="@+id/create_account_indicator"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_alignParentBottom="false"
        android:layout_below="@+id/create_account_txt2"
        android:layout_centerInParent="true"
        android:layout_marginTop="22dp"
        app:tabBackground="@drawable/indicator_selector"
        app:tabGravity="center"
        app:tabIndicatorHeight="0dp" />

    <Button
        android:id="@+id/create_account_btn"
        android:layout_width="315dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="73.9dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:background="@drawable/button_style_pink"
        android:text="@string/create_account"
        android:textSize="17.3sp"
        android:textAllCaps="false"
        android:textColor="@color/bloomWhite"
        android:stateListAnimator="@null"/>


        <TextView
            android:id="@+id/create_account_login_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/bloomWhite"
            android:textSize="11.5sp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="43.2dp"
            android:layout_centerHorizontal="true"
            android:gravity="center"/>


</RelativeLayout>