<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/bloomWhite">

    <ImageButton
        android:layout_width="12.5dp"
        android:layout_height="22dp"
        android:src="@drawable/back"
        android:background="@color/bloomWhite"
        android:id="@+id/back_btn3"
        android:layout_marginStart="9dp"
        android:layout_marginTop="9dp"
        android:scaleType="fitCenter"/>

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/signup_to_work"
        android:layout_below="@+id/back_btn3"
        android:layout_marginTop="14dp"
        android:layout_marginStart="30dp"
        android:text="Sign up to work"
        android:textColor="@color/bloomBackground"
        android:textSize="25sp"/>

    <android.support.design.widget.TextInputLayout
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:id="@+id/signup_email"
        android:layout_below="@+id/signup_to_work"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:theme="@style/HintText"
        >

        <android.support.design.widget.TextInputEditText
            android:id="@+id/signup_input_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_email"
            android:inputType="textEmailAddress"
            android:textSize="15sp"
            android:textCursorDrawable="@color/colorBlack"/>


    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:id="@+id/signup_phone_number"
        android:layout_below="@+id/signup_email"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:theme="@style/HintText"
        >

        <android.support.design.widget.TextInputEditText
            android:id="@+id/signup_input_phone_number"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_phone_number"
            android:textSize="15sp"
            android:textCursorDrawable="@color/colorBlack"/>


    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:id="@+id/signup_password"
        android:layout_below="@+id/signup_phone_number"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:theme="@style/HintText"
        >

        <android.support.design.widget.TextInputEditText
            android:id="@+id/signup_input_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_password"
            android:inputType="textPassword"
            android:textSize="15sp"
            android:textCursorDrawable="@color/colorBlack" />


    </android.support.design.widget.TextInputLayout>

    <Button
        android:layout_width="315dp"
        android:layout_height="50dp"
        android:id="@+id/signup_create_account_btn"
        android:layout_below="@+id/signup_password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="@string/create_account"
        android:textColor="@color/colorBlack"
        android:textAllCaps="false"
        android:background="@drawable/button_style"
        android:textSize="18sp"/>

    <TextView
        android:layout_width="190dp"
        android:layout_height="28.5dp"
        android:id="@+id/signup_terms_of_service"
        android:layout_below="@id/signup_create_account_btn"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorBlack"
        android:textAlignment="center"
        android:textSize="12sp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/signup_acount_availibility"
            android:text="@string/already_have_an_account"
            android:textColor="@color/colorBlack"
            android:layout_marginBottom="45dp"
            android:textSize="12sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/signup_login_link"
            android:text="@string/login"
            android:textColor="@color/colorBlack"
            android:layout_marginStart="2dp"
            android:textSize="12sp"
            />

    </LinearLayout>



</RelativeLayout>