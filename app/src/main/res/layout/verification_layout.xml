<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:layout_width="12.5dp"
        android:layout_height="22dp"
        android:src="@drawable/back"
        android:background="@color/bloomWhite"
        android:id="@+id/back_btn5"
        android:layout_marginStart="9dp"
        android:layout_marginTop="9dp"
        android:scaleType="fitCenter"/>

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/forgot_password"
        android:layout_marginTop="9.5dp"
        android:layout_marginStart="261dp"
        android:text="Forgot Passwrd?"
        android:textColor="@color/colorBlack"
        android:textSize="12sp"/>

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/verification"
        android:layout_below="@+id/back_btn5"
        android:layout_marginTop="14dp"
        android:layout_marginStart="30dp"
        android:text="@string/verification"
        android:textColor="@color/colorBlack"
        android:textSize="25sp"/>

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/code_input_method"
        android:layout_below="@+id/verification"
        android:layout_marginTop="12dp"
        android:layout_marginStart="30dp"
        android:text="@string/choose_your_code_input_method"
        android:textColor="#FF010101"
        android:textSize="15sp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linear_verification"
        android:orientation="horizontal"
        android:layout_below="@+id/code_input_method"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25.5dp">

        <Button
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:id="@+id/verification_email"
            android:background="@drawable/button_style2"
            android:elevation="16dp"/>

        <Button
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:id="@+id/verification_sms"
            android:layout_marginStart="15dp"
            android:background="@drawable/button_style2"/>

    </LinearLayout>

    <EditText
        android:layout_width="315dp"
        android:layout_height="wrap_content"
        android:id="@+id/code_input"
        android:text="@string/code"
        android:layout_below="@id/linear_verification"
        android:layout_marginTop="25dp"
        android:layout_marginStart="30dp"
        android:textSize="15sp"
        android:layout_centerHorizontal="true"/>


    <Button
        android:layout_width="315dp"
        android:layout_height="50dp"
        android:id="@+id/button_next"
        android:layout_below="@+id/code_input"
        android:layout_marginTop="45.5dp"
        android:layout_centerHorizontal="true"
        android:text="@string/next"
        android:textAllCaps="false"
        android:background="@drawable/button_style"/>

    <TextView
        android:layout_width="170dp"
        android:layout_height="28.5dp"
        android:id="@+id/resend_code_link"
        android:text="dsfsdfsfsdfsdfsdfsfsfsfsdfsdfsdfsfsfsfsdfsfsf"
        android:layout_below="@id/button_next"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:textSize="12sp"
        android:gravity="center"
        android:textColor="@color/colorBlack"/>

    <TextView
        android:layout_width="167dp"
        android:layout_height="14dp"
        android:id="@+id/verification_login_link"
        android:text="dsfsdfsfsdfsdfsdfsfsfsfsdfsdfsdfsfsfsfsdfsfsf"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="44.5dp"
        android:textSize="12sp"
        android:gravity="center"
        android:textColor="@color/colorBlack"/>

</RelativeLayout>